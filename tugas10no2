int main(){
  int a, b;
  a = 4;
  b = 6;

  cout << "Nilai sebelum pemanggilan fungsi ";
  cout << "\nA = "<< a<<"\nB = " << b;

  tambah(&a,&b);
  cout << endl;
  cout << "\naNilai setalah pemanggilan fungsi ";
  cout << " \nA = " << a <<"\nB = " << b;
  getchar();
}
void tambah(int *c, int *d){
  *c+=7;
  *d+=5;
  cout << endl;
  cout << "\nNilai di akhir fungsi tambah()";
  cout << "\nC = " << c <<"\nD = " << *d;
  }
